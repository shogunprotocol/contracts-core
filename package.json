{
  "name": "hardhat-project",
  "scripts": {
    "deploy": "npx hardhat run scripts/deploy-core-strategy.ts",
    "deploy:core-testnet": "npx hardhat run scripts/deploy-core-strategy.ts --network core_testnet2",
    "deploy:core-mainnet": "npx hardhat run scripts/deploy-core-strategy.ts --network core_mainnet",
    "interact": "npx hardhat run scripts/interact-core-strategy.ts",
    "interact:core-testnet": "npx hardhat run scripts/interact-core-strategy.ts --network core_testnet2", 
    "interact:core-mainnet": "npx hardhat run scripts/interact-core-strategy.ts --network core_mainnet",
    "tokens": "npx hardhat run scripts/get-core-tokens.ts",
    "tokens:core-testnet": "npx hardhat run scripts/get-core-tokens.ts --network core_testnet2",
    "status": "npx hardhat run scripts/core-vault-status.ts",
    "status:core-testnet": "npx hardhat run scripts/core-vault-status.ts --network core_testnet2",
    "status:core-mainnet": "npx hardhat run scripts/core-vault-status.ts --network core_mainnet",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:core": "npx hardhat test test/CoreStrategy.test.ts",
    "deploy:vault-system": "npx hardhat run scripts/deploy-vault-system.ts",
    "deploy:vault-system:testnet": "npx hardhat run scripts/deploy-vault-system.ts --network core_testnet2",
    "deploy:vault-system:mainnet": "npx hardhat run scripts/deploy-vault-system.ts --network core_mainnet",
    "deploy:with-factory": "DEPLOY_VAULT_FACTORY=true npx hardhat run scripts/deploy-vault-system.ts --network core_testnet2",
    "deploy:mock-stcore": "DEPLOY_MOCK_CORE=true npx hardhat run scripts/get-core-tokens.ts --network core_testnet2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.24.1"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.2.0",
    "@openzeppelin/contracts": "^5.3.0",
    "dotenv": "^16.5.0"
  }
}
